   "source": [
    "# nonlocal переходит вверх внутри функции на уровень выше, но не перезаписывает внешние переменные\n",
    "def f():\n",
    "    city = 'Munich'\n",
    "    def g():\n",
    "        nonlocal city\n",
    "        city = 'Moscow'\n",
    "    g()\n",
    "    print(city)\n",
    "\n",
    "city = 'Stutgart'\n",
    "f()\n",
    "print(city)"
   ]
