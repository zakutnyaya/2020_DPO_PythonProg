    "def benchmark(func):\n",
    "    \"\"\"Декоратор, замеряющий время работы функции\"\"\"\n",
    "    import time\n",
    "    def wrapper(*args, **kwargs):\n",
    "        t = time.clock()\n",
    "        res = func(*args, **kwargs)\n",
    "        print(f'{func.__name__} worked for {round(time.clock() - t, 4)} seconds')\n",
    "        return res\n",
    "    return wrapper"
   ]
