    "# yield не заканчивает функцию, в отличие от return, он просто останавливает функцию\n",
    "# next запускает yield и выполняет перестановку\n",
    "# функция-генератор\n",
    "def fib(n):\n",
    "    a,b = 1,1\n",
    "    for _ in range(n):\n",
    "        yield a \n",
    "        a, b = b, a + b"
   ]
