    "#  global перезаписывает только внешнюю переменную, но не перезаписывает внутри функции уровнем выше\n",
    "def f():\n",
    "    city = 'Munich'\n",
    "    def g():\n",
    "        global city\n",
    "        city = 'Moscow'\n",
    "    g()\n",
    "    print(city)\n",
    "\n",
    "city = 'Stutgart'\n",
    "f()\n",
